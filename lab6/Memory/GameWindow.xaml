<Window x:Class="Memory.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Game Window" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid x:Name="MainGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label x:Name="TimerLabel" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>

        <Grid Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- Здесь картинка с предметами -->
            <Image x:Name="FinalImage" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Grid>

        <Button Content="Далее" Click="NextButton_Click" HorizontalAlignment="Center"
                VerticalAlignment="Center" Grid.Row="2" Width="200" Height="80" FontSize="24" Padding="10" Margin="10"/>
    </Grid>
</Window>
