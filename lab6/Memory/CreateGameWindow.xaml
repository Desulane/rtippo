<Window x:Class="Memory.CreateGameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Game" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Количество игроков:" Margin="10" FontSize="24"/>
            <Slider x:Name="PlayerCountSlider" Minimum="1" Maximum="4" Value="1" Margin="10"
                    IsSnapToTickEnabled="True" TickPlacement="BottomRight" TickFrequency="1" Height="40"/>
            <Button Content="Подтвердить" Click="Confirm_Click" Margin="10" FontSize="24" Padding="10"/>
            <Button Content="В главное меню" Click="ReturnToMainMenu_Click" Margin="10" FontSize="24" Padding="10"/>
        </StackPanel>
    </Grid>
</Window>
