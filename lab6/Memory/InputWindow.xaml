<Window x:Class="Memory.InputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ввод названий предметов" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Введите названия предметов в поле ввода. Каждое название должно быть в новой строке (Enter)."
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,36,0,0" FontSize="24"/>
        <TextBox x:Name="InputTextBox" Grid.Row="0" Margin="100,102,100,60" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto"
                 AcceptsReturn="True" FontSize="20"/>
        <Button x:Name="SubmitButton" Grid.Row="1" Content="Готово" Margin="10" Padding="10" FontSize="24"
                Width="200" Height="80" Click="SubmitButton_Click"/>
    </Grid>
</Window>
