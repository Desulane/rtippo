<Window x:Class="Memory.ReadyToPlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ready to Play" Height="720" Width="1280"
        WindowState="Maximized"
        WindowStyle="None">
    <Grid>
        <TextBlock Text="Убедитесь, что все готовы к игре, время для запоминания предметов ограничено."
                   HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,144,0,0" FontSize="24"/>
        <Button Content="Играть" Click="Play_Click" HorizontalAlignment="Center" VerticalAlignment="Center"
                Width="200" Height="80" FontSize="24" Padding="10"/>
    </Grid>
</Window>
